<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/option_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent"
    android:padding="16dp">
  <LinearLayout
      android:id="@+id/buttonPanel"
      style="@style/default_dialog"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:minWidth="256dp"
      android:orientation="vertical">
    <TextView
        android:id="@+id/option_tv_header"
        style="@style/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_title_background"
        tools:text="Header title1 Header title1 Header title1 Header  44" />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout_height="100dp">
      <LinearLayout
          android:id="@+id/option_bts_list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/popup_button_panel_bg"
          android:orientation="vertical" />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:orientation="horizontal">
      <Button
          android:id="@+id/option_btn_cancel"
          style="@style/default_dialog_button_cancel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end|center"
          android:layout_marginEnd="16dp"
          android:text="@string/cancel"
          tools:visibility="visible" />
      <Button
          android:id="@+id/option_btn_ok"
          style="@style/default_dialog_button_ok"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end|center"
          android:layout_marginEnd="16dp"
          android:text="@string/ok"
          tools:visibility="visible" />
    </LinearLayout>
  </LinearLayout>
</FrameLayout>

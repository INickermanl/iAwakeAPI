<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/default_dialog_button_panel"
    tools:showIn="@layout/countdown_dialog">
  <FrameLayout
      android:id="@+id/dialogCancelContainer"
      android:foreground="?android:attr/selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:layout_gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dialogCancel"
        style="@style/default_dialog_button_cancel"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dialogButtonHeight"
        android:text="@string/cancel"
        android:clickable="false"/>
  </FrameLayout>
  <Button
      android:id="@+id/dialogOk"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/dialogButtonHeight"
      android:text="@string/ok"
      style="@style/default_dialog_button_ok"/>
</LinearLayout>